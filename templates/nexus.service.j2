[Unit]
Description=Nexus Repository Manager service, version {{ install_nexus_repository_version }}
After=network.target
  
[Service]
Type=forking
LimitNOFILE=65536
Wants=network-online.target
After=network.target network-online.target
ExecStart={{ install_nexus_repository_install_dir }}/bin/nexus start
ExecStop={{ install_nexus_repository_install_dir }}/bin/nexus stop
User={{ install_nexus_repository_system_user }}
Group={{ install_nexus_repository_system_group }}
Restart=on-failure
TimeoutSec=600
Environment=JAVA_HOME=/usr/lib/jvm/java-8-openjdk-amd64/jre/bin

[Install]
WantedBy=multi-user.target
